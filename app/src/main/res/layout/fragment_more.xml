<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/text_promotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E4DFF00"
                android:text=" Product promotion"
                android:textSize="34sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@android:drawable/ic_menu_today" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1EFF6600"
                android:text=" Favorite"
                android:textSize="34sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@android:drawable/btn_star_big_on" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E000DFF"
                android:text=" History"
                android:textSize="34sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@android:drawable/ic_menu_sort_by_size" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E00FFD9"
                android:text=" Settings"
                android:textSize="34sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@android:drawable/ic_menu_manage" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1EFF0000"
                android:text=" Help"
                android:textSize="34sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@android:drawable/ic_menu_help" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/text_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>